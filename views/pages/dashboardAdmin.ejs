<script>
  // Mengambil token dari session server dan menyimpannya dalam variabel JavaScript
  const accessToken = "<%= accessToken %>"; // Menggunakan variabel accessToken dari server
  
  // Fetch ke endpoint yang dilindungi menggunakan token akses
  if (accessToken) {
    fetch("http://localhost:4000/dashboard", {
      method: "GET",
      headers: {
        "Content-Type": "application/json",
        "Authorization": `Bearer ${accessToken}` // Menggunakan token akses yang diambil dari session
        // Anda juga dapat menambahkan header lain sesuai kebutuhan
      }
    })
      .then((response) => {
        if (!response.ok) {
          throw new Error('Network response was not ok');
        }
        return response.json();
      })
      .then((data) => {
        console.log(data);
      })
      .catch((error) => {
        console.error("There has been a problem with your fetch operation:", error);
      });
  } else {
    console.error("Access token not found in session.");
  }
</script>


